<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_actv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Lucky Number!"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginTop="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_actv_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your name"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/main_actv_tv"
        android:layout_marginTop="120dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_actv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish me luck"
        android:textAllCaps="false"
        android:onClick="setOnClick"
        android:layout_marginTop="172dp"
        android:backgroundTint="#AAAAFD"
        app:layout_constraintTop_toBottomOf="@id/main_actv_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>