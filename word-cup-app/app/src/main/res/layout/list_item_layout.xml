<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_item_tv_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Country name"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/main_item_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_item_tv_total_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Total Wins"
        app:layout_constraintStart_toEndOf="@id/main_item_img"
        app:layout_constraintTop_toBottomOf="@id/main_item_tv_country_name" />

</androidx.constraintlayout.widget.ConstraintLayout>